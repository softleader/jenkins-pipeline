#!groovy

pipeline {
    agent any 

    stages {

        stage('pull'){
            steps {
                if (isUnix()) {
                    sh "docker pull ${dockerRegistry}/${image}"
                } else {
                    bat "docker pull ${dockerRegistry}/${image}"
                }
            }
        }
        
        stage('undeploy') {
            steps {
                script {
                    try {
                        if (isUnix()) {
                            sh "docker stop ${image}"
                        } else {
                            bat "docker stop ${image}"
                        }
                    } catch(Exception e) {
                    }
                    try {
                        if (isUnix()) {
                            sh "docker rm ${image}"
                        } else {
                            bat "docker rm ${image}"
                        }
                    } catch(Exception e) {
                    }
                    try {
                        if (isUnix()) {
                            sh "docker rmi ${dockerRegistry}/${image}"
                        } else {
                            bat "docker rmi ${dockerRegistry}/${image}"
                        }
                    } catch(Exception e) {
                    }
                }
            }
        }
       
        stage('docker run') {
            steps {
                if (isUnix()) {
                    sh "docker run -itd -m 1024m --memory-swap 1024m --name ${image} --net softleader ${dockerRegistry}/${image}"
                } else {
                    bat "docker run -itd -m 1024m --memory-swap 1024m --name ${image} --net softleader ${dockerRegistry}/${image}"
                }
            }
        }
    }
}
